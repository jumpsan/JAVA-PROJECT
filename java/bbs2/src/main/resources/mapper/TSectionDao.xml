<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bbs.dao.TSectionDao">

    <resultMap type="com.example.bbs.entity.TSection" id="TSectionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="plateId" column="plate_id" jdbcType="INTEGER"/>
        <result property="postNum" column="post_num" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--根据板块编号查询-->
    <select id="selectSectionByPlateId" resultMap="TSectionMap">
        select
        id, name, plate_id, post_num, user_id, create_time
        from bbs.t_section
        where plate_id = #{id}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TSectionMap">
        select
        id, name, plate_id, post_num, user_id, create_time
        from bbs.t_section
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="plateId != null">
                and plate_id = #{plateId}
            </if>
            <if test="postNum != null">
                and post_num = #{postNum}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="addSection" keyProperty="id" useGeneratedKeys="true">
        insert into bbs.t_section(name, plate_id, post_num, user_id, create_time)
        values (#{name}, #{plateId}, #{postNum}, #{userId}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateSection">
        update bbs.t_section
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="plateId != null">
                plate_id = #{plateId},
            </if>
            <if test="postNum != null">
                post_num = #{postNum},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteSectionById">
        delete from bbs.t_section where id = #{id}
    </delete>

</mapper>
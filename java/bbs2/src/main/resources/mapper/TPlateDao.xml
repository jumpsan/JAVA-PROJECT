<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bbs.entity.dao.TPlateDao">

    <resultMap type="com.example.bbs.entity.entity.TPlate" id="TPlateMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询所有版块-->
    <select id="selectAllPlate" resultMap="TPlateMap">
        select
        id, name, user_id, create_time
        from t_plate
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TPlateMap">
        select
        id, name, user_id, create_time
        from bbs.t_plate
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增版块-->
    <insert id="addPlate" keyProperty="id" useGeneratedKeys="true">
        insert into bbs.t_plate(name, user_id, create_time)
        values (#{name}, #{userId}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updatePlate">
        update t_plate
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deletePlate">
        delete from t_plate where id = #{id}
    </delete>

</mapper>
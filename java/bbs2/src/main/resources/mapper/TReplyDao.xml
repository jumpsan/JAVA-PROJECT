<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bbs.entity.dao.TReplyDao">

    <resultMap type="com.example.bbs.entity.entity.TReply" id="TReplyMap">
        <result property="replyTime" column="reply_time" jdbcType="TIMESTAMP"/>
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="postId" column="post_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>

    <!--根据回复id查询-->
    <select id="selectReplyById" resultMap="TReplyMap">
        select
        reply_time, id, user_id, post_id, content
        from bbs.t_reply
        where id=#{id}
    </select>

    <!--根据帖子id查询-->
    <select id="selectReplyByPostId" resultMap="TReplyMap">
        select
        reply_time, id, user_id, post_id, content
        from bbs.t_reply
        where post_id=#{id}
        limit #{start}, #{num}
    </select>

    <!--根据用户id查询-->
    <select id="selectReplyByPostId" resultMap="TReplyMap">
        select
        reply_time, id, user_id, post_id, content
        from bbs.t_reply
        where user_id=#{id}
        limit #{start}, #{num}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TReplyMap">
        select
        reply_time, id, user_id, post_id, content
        from bbs.t_reply
        <where>
            <if test="replyTime != null">
                and reply_time = #{replyTime}
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="postId != null">
                and post_id = #{postId}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="addReply" keyProperty="id" useGeneratedKeys="true">
        insert into bbs.t_reply(reply_time, user_id, post_id, content)
        values (#{replyTime}, #{userId}, #{postId}, #{content})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateReply">
        update bbs.t_reply
        <set>
            <if test="replyTime != null">
                reply_time = #{replyTime},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="postId != null">
                post_id = #{postId},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteReplyById">
        delete from bbs.t_reply where id = #{id}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bbs.dao.TApproveDao">

    <resultMap type="com.example.bbs.entity.TApprove" id="TApproveMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
        <result property="postId" column="post_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--根据帖子Id查找-->
    <select id="selectApproveByPostId" resultMap="TApproveMap">
        select
        id, user_id, time, post_id
        from bbs.t_approve
        where post_id = #{id}
    </select>

    <!--添加点赞记录-->
    <insert id="addApprove" keyProperty="id" useGeneratedKeys="true">
        insert into bbs.t_approve(user_id, time, post_id)
        values (#{userId}, #{time}, #{postId})
    </insert>


    <!--删除点赞记录-->
    <delete id="deleteApprove">
        delete from bbs.t_approve where id = #{id}
    </delete>

</mapper>